@model IEnumerable<Books>

@{
    ViewBag.Title = "Library";
    Layout = "_Layout";
}

@if(Model.Count()==0)
{
    <div class="alert alert-warning p-5">
        Book Does'nt Exist'
    </div>
}
else
{
    <table class="table table-striped w-auto">
      <thead>
        <tr>
          <th scope="col">ID</th>
          <th scope="col">Category</th>
          <th scope="col">Book</th>
          <th scope="col">Author</th>
          <th scope="col">Published</th>
          <th scope="col">Price</th>
          <th scope="col">Updated</th>
          <th colspan="2">Action</th>
        </tr>
      </thead>
      <tbody>
          @foreach (var item in Model)
          {
              <tr>
                  <th scope="row">@item.BookId</th>
                  <td>@item.BookcategoryId</td>
                  <td>@item.BookName</td>
                  <td>@item.AuthorName</td>
                  <td>@item.PublishYear</td>
                  <td>@item.Price</td>
                  <td>@item.UpdatedOn.ToString("MMM d yyyy")</td>
                  <td><a class="btn btn-primary" asp-controller="Book" asp-action="ViewBook" asp-route-id="@item.BookId"><i class="fa-solid fa-eye"></i>View</a></td>
                  <td><a class="btn btn-warning" asp-controller="Book" asp-action="Edit" asp-route-id="@item.BookId"><i class="fa-solid fa-pen px-1"></i>Edit</a></td>
                  <td><a class="btn btn-danger" asp-controller="Book" asp-action="Delete" asp-route-id="@item.BookId" onclick="return confirm('Are you sure do you want delete')"><i class="fa-solid fa-trash-can px-1"></i>Delete</a></td>
             </tr>
          }
    
      </tbody>
  </table>

    @if (TempData["success"] != null)
    {
        <svg xmlns="http://www.w3.org/2000/svg" style="display: none;">
              <symbol id="check-circle-fill" fill="currentColor" viewBox="0 0 16 16">
                <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z"/>
              </symbol>
        </svg>
        <div class="alert alert-success d-flex align-items-center alert-dismissible fade show" role="alert">
            <svg class="bi flex-shrink-0 me-2" width="24" height="24" role="img" aria-label="Success:"><use xlink:href="#check-circle-fill"/></svg>
            <div>
            @TempData["success"]
            </div>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
}
@section scripts{
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/js/all.min.js" integrity="sha512-yFjZbTYRCJodnuyGlsKamNE/LlEaEAxSUDe5+u61mV8zzqJVFOH7TnULE2/PP/l5vKWpUNnF4VGVkXh3MjgLsg==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
}